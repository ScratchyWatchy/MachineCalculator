@model IEnumerable<MachineCalculator.Models.AppData>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RAM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.instances)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.flag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.resourses)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RAM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.instances)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.flag)
            </td>
            <table class="table">
                <thead>
                    @foreach (var subitem in item.resourses)
                    {
                    <th>
                        @Html.DisplayFor(subModelItem => @subitem.name)
                    </th>
                }
                    </thead>
                    <tbody>
                        @foreach (var subitem in item.resourses)
                        {
                        <td>
                            @Html.DisplayFor(subModelItem => @subitem.load)
                        </td>
                    }
                </tbody>
            </table>






        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
        </tr>
    }
        </tbody>
    </table>
