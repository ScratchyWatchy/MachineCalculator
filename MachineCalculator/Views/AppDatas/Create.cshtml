@model MachineCalculator.Models.AppObj
@using (Html.BeginForm())
{
    @Html.EditorFor(o => o.AppParameters)
}

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>AppData</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="flag" /> @Html.DisplayNameFor(model => model.flag)
                    </label>
                </div>
            </div>
            <div class="form-group">
                @for (int i = 0; i < Model.AppParameters.Count; i++)
                {
                <div class="form-group">
                    @Html.DisplayFor(modelItem => Model.AppParameters[i].name)
                    @Html.HiddenFor(o => o.AppParameters[i].name, new { name = Model.AppParameters[i].name })
                    <input asp-for="AppParameters[i].load" />
                    <span asp-validation-for=@Model.AppParameters[i].name class="text-danger"></span>
                </div>
                }
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
