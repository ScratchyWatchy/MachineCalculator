@model MachineCalculator.Models.AppObj

@{
    ViewData["Title"] = "Delete";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>

<h2>Delete application</h2>

<h3>Are you sure you want to delete this application?</h3>
<div>
    <h4>AppData</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(modelItem => Model.name)
        </dt>
        <dd>
            @Html.DisplayFor(modelItem => Model.name)
        </dd>
        <dt>
            @Html.DisplayNameFor(modelItem => Model.flag)
        </dt>
        <dd>
            @Html.DisplayFor(modelItem => Model.flag)
        </dd>
        @foreach (var subitem in Model.AppParameters)
        {
            <dt>
                @Html.DisplayFor(modelItem => subitem.name)
            </dt>
            <dd>
                @Html.DisplayFor(subModelItem => subitem.load)
            </dd>
        }
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="Index" style="font-size: 12pt ; font-weight:600">Back to List</a>
    </form>
</div>
