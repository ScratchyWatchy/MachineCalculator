@model MachineCalculator.Models.AppObj
@Html.Partial("~/Views/Shared/Header.cshtml")
@{
    ViewData["Title"] = "Delete";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/site.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>

<h2>Delete application</h2>
<a asp-action="Index" style="font-size: 12pt ; font-weight:600">Back to List</a>
<body style="margin: 10px">
    <h3>Are you sure you want to delete this application?</h3>
    <div>
        <h4>AppData</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(modelItem => Model.name)
            </dt>
            <dd>
                @Html.DisplayFor(modelItem => Model.name)
            </dd>
            <dt>
                @Html.DisplayNameFor(modelItem => Model.flag)
            </dt>
            <dd>
                @Html.DisplayFor(modelItem => Model.flag)
            </dd>
            @{
                string[] units = { "mHz/core", "MB", "Mb/s", "Mb", "", "" };
            }
            @foreach (var subitem in Model.AppParameters)
            {
                <dt>
                    @Html.DisplayFor(modelItem => subitem.name),
                    @units[Model.AppParameters.IndexOf(subitem)]
                </dt>
                <dd>
                    @Html.DisplayFor(subModelItem => subitem.load)
                </dd>
            }
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-default" />
        </form>
    </div>
</body>